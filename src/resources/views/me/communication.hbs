<div id="myDiv" class="ml-2 btn btn-outline-primary" onclick="copyText()" title="Coppy to clipboard">{{session.godcat}}</div>
<div class="container mt-3">
    <div class="row">
      <div class="col-lg-12">
        <div class="chat-box">
            {{#each messages}}
                <div class="message rounded mb-2 p-1{{#if (eq this.name)}} table-primary {{else}} table-secondary{{/if}}">
                    <p><strong>{{this.name}}: </strong>{{this.content}}</p>
                </div>
            {{/each}}
        </div>
      </div>
    </div>
</div>
<div class="container mt-2">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <form action="/me/communication" method="POST">
            <input type="hidden" name="name" value="{{session.name}}">
            <div class="form-group">
              <textarea class="form-control" name="content" placeholder="Nội dung tin nhắn"></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-block">Gửi</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
  function copyText() {
    var div = document.getElementById("myDiv");
    var text = div.innerText;

    navigator.clipboard.writeText(text)
      .then(function() {
        div.title = 'Copied!'
      })
      .catch(function(error) {
         div.title = error;
      });
  }
</script>