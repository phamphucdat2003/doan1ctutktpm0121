<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center">
        <h1>Login</h1>
      </div>
      <div class="main-content-agile mt-4">
        <div class="sub-main-w3">
          <form action="/auth/login" method="post"> 
                <div class="form-group">
                  <div class="input-group">
                    <input placeholder="UserName" name="username" id="username" class="form-control" type="text" required>
                    <div class="input-group-append">
                      <div class="input-group-text">
                        <i class="fa-solid fa-user"></i>
                      </div>
                    </div>
                  </div>
                  <p class="text-danger">{{errorN}}</p>
                </div>
                <div class="form-group">
                  <div class="input-group">
                    <input placeholder="Password" name="password" id="password" class="form-control" type="password" required>
                    <div class="input-group-append">
                      <div class="input-group-text">
                        <i class="fa-solid fa-lock"></i>
                      </div>
                    </div>
                  </div>
                  <p class="text-danger">{{errorP}}</p>
                </div>
                <div class="form-group">
                  <div class="d-flex justify-content-center align-items-center">
                    <div>
                      <input type="submit" value="Login" class="btn btn-primary">
                    </div>
                  </div>
                </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>