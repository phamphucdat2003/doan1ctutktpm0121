<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <h3>Tạo baverage</h3>
            <form method="post" class="size-300px" action="/baverages/newbaverage">
                <div class="form-group">
                    <label for="name">Tên món nước</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="imgbaverage">Link ảnh món nước</label>
                    <input type="text" class="form-control" id="imgbaverage" name="imgbaverage" required>
                </div>
                <div class="form-group">
                    <label for="priceSizeM">Giá size M</label>
                    <input type="text" class="form-control" id="priceSizeM" name="priceSizeM" required>
                </div>
                <div class="form-group">
                    <label for="priceSizeL">Giá size L</label>
                    <input type="text" class="form-control" id="priceSizeL" name="priceSizeL" required>
                </div>
                <div class="form-group">
                    <label for="describe">Mô tả sản phẩm</label>
                    <textarea class="form-control" id="describe" name="describe" rows="5"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Thêm baverage</button>
            </form>
        </div>
    </div>
</div>